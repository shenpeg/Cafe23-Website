<h3> Generate Payroll for Employee </h3>

<div class="row">
  <div class="col s9">
    <div class="card">
      <div class="card-content">
        <%= form_with url: employee_payroll_path, method: "get" do |f| %>
        <div class="row">
          <div class="form-inputs">
          <%= f.collection_select :employee_id, Employee.active.alphabetical.to_a, :id, :name, prompt: true %><br>
          <%= f.date_field :start_date, value: (params[:start_date].present? ? Date.parse(params[:start_date]).strftime("%m/%d/%Y") : Date.current.strftime("%Y-%m-%d")) %>
          <%= f.date_field :end_date, value: (params[:end_date].present? ? Date.parse(params[:end_date]).strftime("%m/%d/%Y") : Date.current.strftime("%Y-%m-%d")) %>  
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="form-actions col s7">
    <%= f.button :submit, class: 'waves-effect waves-light btn'  %>
  </div>
</div>

<%= link_to 'Back', :back %>

<% end %>
