<div class="card">    
  <div class="card-content">
    <%= simple_form_for(@employee) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <div class="form-inputs">
          <%= f.input :first_name, label_html: { class: 'active' } %>
          <%= f.input :last_name, label_html: { class: 'active' } %>
          <%= f.input :role, collection: Employee::ROLES_LIST, include_blank: true %>
          <%= f.input :phone, label_html: { class: 'active' } %>
          <%= f.input :date_of_birth, label_html: { class: 'active' } %>
          <%= f.input :ssn, label_html: { class: 'active' } %>
          <%= f.input :active %>
      </div>
    </div>
  </div>
</div>
  <div class="row">
    <div class="col s12">
      <%= render :partial => "employee_fields", locals: {f: f} %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s7">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
