<h2>Stores</h2>

<h3>Active Stores owned by Cafe23</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Current Assignments</th>
      <th>Phone</th>
    </tr>
  </thead>
  <tbody>
    <% @active_stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.assignments.size %></td>
        <td><%= number_to_phone(store.phone, delimiter: '-') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>Inactive Stores</h3>
<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @inactive_stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>